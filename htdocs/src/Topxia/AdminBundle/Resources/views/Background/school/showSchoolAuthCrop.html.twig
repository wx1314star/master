      <h4 class="modal-title">{{'图片预览'|trans}}</h4>
    </div>
    <div class="modal-body">

      {#<form id="schoolSch-crop-form" method="post" action="{{ path('newadmin_school_uploadSch_crop', {id: school_id}) }}" >#}
       
        <div class="form-group clearfix" width="1024" height="768">
          <div class="col-md-offset-2 col-md-8 controls">
