{% extends 'TopxiaAdminBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% block title %}{{'上传民办非企业登记证书'|trans}}{% endblock %}
{% block body %}

  <form id="school-cer-form" class="form-horizontal" method="post" enctype="multipart/form-data" action="{{ path('newadmin_school_uploadCer', {id: schoolAuth.school_id}) }}">

    {{ web_macro.flash_messages() }}

    <div class="form-group">
      <div class="col-md-2 control-label"><b>{{'当前图片'|trans}}</b></div>
      <div class="controls col-md-8 controls">
      	<img src="{{ filepath(schoolAuth.registerCertificate, 'avatar.png') }}">
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2 control-label">
      </div>
      <div class="controls col-md-8 controls">
        <p class="help-block">{{'你可以上传JPG、GIF或PNG格式的文件，文件大小不能大于'|trans}}<strong>2M</strong>。</p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2 control-label"></div>
      <div class="controls col-md-8 controls">
        <a id="upload-pic-cer-btn" 
        class="btn btn-primary"
        data-upload-token="{{ upload_token('tmp', 'image') }}"
        data-goto-url="{{ path('newadmin_school_uploadCer_crop', {id: schoolAuth.school_id}) }}"
        >{{'上传新图片'|trans}}</a>
        
      </div>
    </div>

  </form>

{% endblock %}


{% block footer %}
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'关闭'|trans}}</button>
  <script>app.load('school/upload-authCer')</script>
{% endblock %}